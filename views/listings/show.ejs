<% layout("/layouts/boilerplate")  %>
<script>
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row">
  <div class="col-8 offset-3 ">
  <h3><%= listing.title %> </h3>
</div>
<div class="card col-6 offset-3 show-card listing-card">
    <a href="/listings/<%= listing._id %>">
        <img class="card-img-top show-img" src="<%= listing.image.url %>" alt="listing_image">
    </a>

    <div class="card-body">
      <p><i>Owned By:<%= listing.owner.username %></i></p>
        <h3><%= listing.title %></h3>
        <p class="card-text"><%= listing.description %></p>
        <p>Rs <%= listing.price.toLocaleString("en-IN") %></p>
        <p><%= listing.location %></p>
        <p><%= listing.country %></p>
    </div>
</div>

  <br />

<% if (currUser && listing.owner && listing.owner._id?.equals(currUser._id)) { %>
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit </a>

    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark offset-3 ">Delete </button>
    </form>
  </div>
  <% } %>
  
  <div class="col-8 offset-3">
    <hr>
    <% if(currUser) { %>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
      <div class="rating">
        <label for="rating"></label>
          <input type="radio" id="star5" name="review[rating]" value="5">
          <label for="star5">★</label>

          <input type="radio" id="star4" name="review[rating]" value="4">
          <label for="star4">★</label>

          <input type="radio" id="star3" name="review[rating]" value="3">
          <label for="star3">★</label>

          <input type="radio" id="star2" name="review[rating]" value="2">
          <label for="star2">★</label>

          <input type="radio" id="star1" name="review[rating]" value="1">
          <label for="star1">★</label>
      </div>
    </div>

      <div>
        <label for="comment">Comments</label>
        <textarea id="comment" name="review[body]" rows="5" cols="30" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter your comments for review</div>
      </div>
      <button class="btn btn-secondary">submit</button>
    </form>
    <% } %>

    <% if(listing.reviews.length > 0) { %>
    <div class="row">
      <p><b>All Reviews </b> </p>
    <% for (let review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <h5 class="card-title">@<%= review.author.username %></h5>
      <div class="static-rating">
        <span class="filled"><%= '★'.repeat(review.rating) %></span><span class="empty"><%= '★'.repeat(5 - review.rating) %></span></div>
        <p class="card-text"><%= review.body %></p>

      </div>
      <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>
    </div>
    <% } %>
  </div>
    <div class="col-8 offset-3 mb-3">
      <h3>where you'll be</h3>
    <div id="map"></div>
  </div>

</div>

<script src="/js/map.js"></script>